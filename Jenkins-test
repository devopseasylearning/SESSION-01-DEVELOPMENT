pipeline {
    agent any

    stages {

        stage('cleaning enviroment') {
            steps {
                sh '''
             docker rm -f $(docker ps -aq) || true 
               
                '''
            }
        }
    
    
    
    stage('build the image') {
            steps {
                sh '''
             docker service start
             systemctl enable docker   
             docker build -t nginx:1.23.1 . 
                '''
            }
        }
    
    stage('checking images') {
            steps {
                sh '''
           sudo docker images
                '''
            }
        }
    
    stage('launch container') {
            steps {
                sh '''
           docker run -i --name alex nginx:1.23.1
                '''
            }
        }
    

    
    
    }

}








